<%- include('includes/head.ejs') %>
<%- include('includes/bg.ejs') %>
<script>
    window.addEventListener("pageshow", () => {
        document.getElementsByTagName('form')[0].reset();
    });


</script>
</head>
<br>
<div class="container">

    <div class="container bg-transparent rounded" id="pageHead">
        <h1>Internet programming - EX4</h1>
        <h3>Please login</h3>
        <br>
    </div>
    <br>
    <br>
    <div class="container bg-transparent rounded auto">
        <% if (registered.trim() !== "") { %>
            <h1><%= registered %></h1>
            <br>
        <% } %>
        <form action="/" method="post">
            <h3>Personal information</h3>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Enter Email" required="true">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter Password" required="true">
            </div>
            <input type="submit" class="btn btn-primary" value="Login">
            <a href="/reg-usr" class="btn btn-info" role="button">Register new user</a>
        </form>
        <br>

        <% if (errMessage.trim() !== "") { %>
            <h1><%= errMessage %></h1>
            <a href="/" class="btn btn-info" role="button">Try again</a>
            <br>
        <% } %>
    </div>


</div>

<%- include('includes/end.ejs') %>